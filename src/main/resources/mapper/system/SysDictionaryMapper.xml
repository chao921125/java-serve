<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.SysDictionaryMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="SysDictionaryMap" type="com.cc.server.entity.system.SysDictionary">
            <id column="id" property="id" />
            <result column="name" property="name" />
            <result column="value" property="value" />
            <result column="status" property="status" />
            <result column="create_by" property="createBy" />
            <result column="create_time" property="createTime" />
            <result column="update_by" property="updateBy" />
            <result column="update_time" property="updateTime" />
            <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询列 -->
    <sql id="SysDictionaryList">
        id, name, value, status, create_by, create_time, update_by, update_time, remark
    </sql>

    <!-- 通用条件列 -->
    <sql id="SysDictionaryBy">
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="value != null and value != ''">
                AND value = #{value}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
            <if test="createBy != null and createBy != ''">
                AND create_by = #{createBy}
            </if>
            <if test="createTime != null and createTime != ''">
                AND create_time = #{createTime}
            </if>
            <if test="updateBy != null and updateBy != ''">
                AND update_by = #{updateBy}
            </if>
            <if test="updateTime != null and updateTime != ''">
                AND update_time = #{updateTime}
            </if>
            <if test="remark != null and remark != ''">
                AND remark = #{remark}
            </if>
    </sql>

    <!-- 通用设置列 -->
    <sql id="SysDictionarySet">
            <if test="name != null and name != ''">
                name = #{name}
            </if>
            <if test="value != null and value != ''">
                value = #{value}
            </if>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
            <if test="createBy != null and createBy != ''">
                create_by = #{createBy}
            </if>
            <if test="createTime != null and createTime != ''">
                create_time = #{createTime}
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy}
            </if>
            <if test="updateTime != null and updateTime != ''">
                update_time = #{updateTime}
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark}
            </if>
    </sql>

    <!-- 通用查询 -->
    <sql id="selectSysDictionaryVo">
        select id, name, value, status, create_by, create_time, update_by, update_time, remark from sys_dictionary
    </sql>

    <!-- 查询表sys_dictionary所有信息 -->
    <select id="selectAllSysDictionary" resultMap="SysDictionaryMap">
        SELECT
        <include refid="SysDictionaryList"/>
        FROM sys_dictionary
    </select>

    <!-- 根据主键id查询表sys_dictionary信息 -->
    <select id="selectSysDictionaryById" resultMap="SysDictionaryMap">
        SELECT
        <include refid="SysDictionaryList"/>
        FROM sys_dictionary
        WHERE id = #{id}
    </select>

    <!-- 根据条件查询表sys_dictionary信息 -->
    <select id="selectSysDictionaryBy" resultMap="SysDictionaryMap">
        SELECT
        <include refid="SysDictionaryList"/>
        FROM sys_dictionary
        WHERE 1=1
        <include refid="SysDictionaryBy" />
    </select>

    <!-- 新增表sys_dictionary信息 -->
    <insert id="insertSysDictionary">
        INSERT INTO sys_dictionary (
            id
            ,name
            ,value
            ,status
            ,create_by
            ,create_time
            ,update_by
            ,update_time
            ,remark
        ) VALUES (
            #{id}
            ,#{name}
            ,#{value}
            ,#{status}
            ,#{createBy}
            ,#{createTime}
            ,#{updateBy}
            ,#{updateTime}
            ,#{remark}
        )
    </insert>

    <!-- 根据主键id更新表sys_dictionary信息 -->
    <update id="updateSysDictionaryById" parameterType="com.cc.server.entity.system.SysDictionary">
        UPDATE sys_dictionary
        <set>
            <include refid="SysDictionarySet"/>
        </set>
        WHERE
        id=#{id}
    </update>

    <!-- 根据主键id删除表sys_dictionary信息：慎用！！！ -->
    <delete id="deleteSysDictionaryById">
        DELETE FROM
        sys_dictionary
        WHERE id=#{id}
    </delete>
</mapper>
