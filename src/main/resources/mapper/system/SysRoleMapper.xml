<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.SysRoleMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="SysRoleMap" type="entity.SysRole">
            <id column="id" property="id" />
            <result column="name" property="name" />
            <result column="code" property="code" />
            <result column="sort" property="sort" />
            <result column="permissions" property="permissions" />
            <result column="data_scope" property="dataScope" />
            <result column="status" property="status" />
            <result column="create_by" property="createBy" />
            <result column="create_time" property="createTime" />
            <result column="update_by" property="updateBy" />
            <result column="update_time" property="updateTime" />
            <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询列 -->
    <sql id="SysRoleList">
        id, name, code, sort, permissions, data_scope, status, create_by, create_time, update_by, update_time, remark
    </sql>

    <!-- 通用条件列 -->
    <sql id="SysRoleBy">
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="code != null and code != ''">
                AND code = #{code}
            </if>
            <if test="sort != null and sort != ''">
                AND sort = #{sort}
            </if>
            <if test="permissions != null and permissions != ''">
                AND permissions = #{permissions}
            </if>
            <if test="dataScope != null and dataScope != ''">
                AND data_scope = #{dataScope}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
            <if test="createBy != null and createBy != ''">
                AND create_by = #{createBy}
            </if>
            <if test="createTime != null and createTime != ''">
                AND create_time = #{createTime}
            </if>
            <if test="updateBy != null and updateBy != ''">
                AND update_by = #{updateBy}
            </if>
            <if test="updateTime != null and updateTime != ''">
                AND update_time = #{updateTime}
            </if>
            <if test="remark != null and remark != ''">
                AND remark = #{remark}
            </if>
    </sql>

    <!-- 通用设置列 -->
    <sql id="SysRoleSet">
            <if test="name != null and name != ''">
                name = #{name}
            </if>
            <if test="code != null and code != ''">
                code = #{code}
            </if>
            <if test="sort != null and sort != ''">
                sort = #{sort}
            </if>
            <if test="permissions != null and permissions != ''">
                permissions = #{permissions}
            </if>
            <if test="dataScope != null and dataScope != ''">
                data_scope = #{dataScope}
            </if>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
            <if test="createBy != null and createBy != ''">
                create_by = #{createBy}
            </if>
            <if test="createTime != null and createTime != ''">
                create_time = #{createTime}
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy}
            </if>
            <if test="updateTime != null and updateTime != ''">
                update_time = #{updateTime}
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark}
            </if>
    </sql>

    <!-- 通用查询 -->
    <sql id="selectSysRoleVo">
        select id, name, code, sort, permissions, data_scope, status, create_by, create_time, update_by, update_time, remark from sys_role
    </sql>

    <!-- 查询表sys_role所有信息 -->
    <select id="selectAllSysRole" resultMap="SysRoleMap">
        SELECT
        <include refid="SysRoleList"/>
        FROM sys_role
    </select>

    <!-- 根据主键id查询表sys_role信息 -->
    <select id="selectSysRoleByid" resultMap="SysRoleMap">
        SELECT
        <include refid="SysRoleList"/>
        FROM sys_role
        WHERE id = #{id}
    </select>

    <!-- 根据条件查询表sys_role信息 -->
    <select id="selectSysRoleBy" resultMap="SysRoleMap">
        SELECT
        <include refid="SysRoleList"/>
        FROM sys_role
        WHERE 1=1
        <include refid="SysRoleBy" />
    </select>

    <!-- 新增表sys_role信息 -->
    <insert id="insertSysRole">
        INSERT INTO sys_role (
            id
            ,name
            ,code
            ,sort
            ,permissions
            ,data_scope
            ,status
            ,create_by
            ,create_time
            ,update_by
            ,update_time
            ,remark
        ) VALUES (
            #{id}
            ,#{name}
            ,#{code}
            ,#{sort}
            ,#{permissions}
            ,#{dataScope}
            ,#{status}
            ,#{createBy}
            ,#{createTime}
            ,#{updateBy}
            ,#{updateTime}
            ,#{remark}
        )
    </insert>

    <!-- 根据主键id更新表sys_role信息 -->
    <update id="updateSysRoleByid" parameterType="entity.SysRole">
        UPDATE sys_role
        <set>
            <include refid="SysRoleSet"/>
        </set>
        WHERE
        id=#{id}
    </update>

    <!-- 根据主键id删除表sys_role信息：慎用！！！ -->
    <delete id="deleteSysRoleByid">
        DELETE FROM
        sys_role
        WHERE id=#{id}
    </delete>
</mapper>
